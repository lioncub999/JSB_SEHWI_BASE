<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/WEB-INF/views/cmm">

    <!--    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓-->
    <!--    ┃  ◉ SiteMesh 제외 URL -->
    <!--    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛-->
    <excludes>
        <pattern>/login/*</pattern>
    </excludes>

    <!--    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓-->
    <!--    ┃  ◉ SiteMesh 포함 URL -->
    <!--    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛-->
    <decorator name="default" page="template/default/template.jsp">
        <!-- 메인 -->
        <pattern>/main</pattern>
        <pattern>/main/*</pattern>

        <!-- 촬영 신청 -->
        <pattern>/videoReq</pattern>
        <pattern>/videoReq/*</pattern>

        <!-- 촬영 통계 & 정산 -->
        <pattern>/statistics</pattern>
        <pattern>/statistics/*</pattern>

        <!-- 마이페이지 -->
        <pattern>/mypage</pattern>
        <pattern>/mypage/*</pattern>
    </decorator>
</decorators>
