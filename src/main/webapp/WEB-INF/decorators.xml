<?xml version="1.0" encoding="utf-8"?>
<decorators defaultdir="/WEB-INF/views/cmm">

    <!--    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓-->
    <!--    ┃  ◉ SiteMesh 제외 URL -->
    <!--    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛-->
    <excludes>
        <pattern>/login/*</pattern>
    </excludes>

    <!--    ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓-->
    <!--    ┃  ◉ SiteMesh 포함 URL -->
    <!--    ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛-->
    <decorator name="default" page="template/default/template.jsp">
        <!-- 계약 -->
        <pattern>/contract</pattern>
        <pattern>/contract/*</pattern>
        
        <!-- 촬영 -->
        <pattern>/video</pattern>
        <pattern>/video/*</pattern>

        <!-- 마이페이지 -->
        <pattern>/mypage</pattern>
        <pattern>/mypage/*</pattern>
    </decorator>
</decorators>
